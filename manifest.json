{
  "manifest_version": 2,

  "name": "Twitch Overlay",
  "description": "Allows user to put overlay of Twitch stream on their browser",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "tabs",
    "*://*/*"
  ],
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["js/content.js"],
    "run_at": "document_end",
    "all_frames": false
  }]
}