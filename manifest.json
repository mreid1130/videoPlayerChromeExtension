{
  "manifest_version": 2,

  "name": "BrowseBed",
  "description": "Embed a resizeable, draggable video overlay on top of your active tab by passing in a video URL from Twitch, YouTube, Vimeo, or DailyMotion.",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "tabs",
    "*://*/*"
  ],
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["js/jquery/jquery-1.10.2.min.js", "js/jquery/jquery-ui.min.js", "js/content.js"],
    "css": ["css/jquery/jquery-ui.css", "css/embed.css"],
    "run_at": "document_end",
    "all_frames": false
  }]
}
